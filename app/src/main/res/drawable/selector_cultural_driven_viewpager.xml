        <shape  android:shape="oval">
            <corners android:radius="7dp"/>
            <stroke android:color="#99D9F9" android:width="1dp"/>
            <solid android:color="#99D9F9"/>
        </shape>
    </item>
    <item android:state_selected="false">
        <shape  android:shape="oval">
            <corners android:radius="7dp"/>
            <stroke android:color="#99D9F9" android:width="1dp"/>
        </shape>
    </item>

</selector>